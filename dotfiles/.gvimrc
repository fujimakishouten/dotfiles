"====================================================================
" gvimrc
"====================================================================

"--------------------------------------------------------------------
" Window settings
"--------------------------------------------------------------------

" Window width
set columns=120

" Window height
set lines=36

" Window position
winpos 420 180

" Show horizonal scroll bar
"set guioptions+=b

" Always show tabs
set showtabline=2

"--------------------------------------------------------------------
" Color theme settings
"--------------------------------------------------------------------

"hi Normal guifg=#00ABBC guibg=#000000
"hi LineNr guifg=#11B8C8 guibg=#000000

"--------------------------------------------------------------------
" Font settings
"--------------------------------------------------------------------

set guifont=VLGothic\ 12
set guifontset=Bitstream\ Vera\ Sans\ Mono\ 11:VLGothic\ 12
set guifontwide=VLGothic\ 12

"--------------------------------------------------------------------
" Cursor settings
"--------------------------------------------------------------------

" Always show cursor at middle-center of screen
set scrolloff=999

"--------------------------------------------------------------------
" Mouse settings
"--------------------------------------------------------------------

" Not change focus on mouse move
set nomousefocus

" Hide mouse pointer
set mousehide

"--------------------------------------------------------------------
" Keyboard setting
"--------------------------------------------------------------------

" Disable input method in command mode
set imdisable

"--------------------------------------------------------------------
" Menu settings
"--------------------------------------------------------------------

" Hide toolbar
set guioptions-=T

